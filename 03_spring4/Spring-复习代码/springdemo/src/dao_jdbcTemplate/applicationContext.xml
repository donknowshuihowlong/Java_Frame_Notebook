	<!-- 配置DBCP数据源 -->
	<!-- 
	<bean id="myDBCPDataSource" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="dirverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/bjtest" />
