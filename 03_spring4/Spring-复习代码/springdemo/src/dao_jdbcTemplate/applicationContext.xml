		<property name="password" value="123456"></property>
	</bean> -->
	<!-- 1.配置C3P0数据源 -->
	<bean name="myC3P0DataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" >
		<property name="jdbcUrl" value="${jdbc.jdbcUrl}" ></property>
		<property name="driverClass" value="${jdbc.driverClass}" ></property>
		<property name="user" value="${jdbc.user}" ></property>
		<property name="password" value="${jdbc.password}" ></property>
	</bean>
	
	<!-- 2.将JDBCTemplate放入spring容器 -->
	<bean name="myJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate" >
		<property name="dataSource" ref="myC3P0DataSource" ></property>
	</bean>
	
	<!-- 3.将UserDao放入Spring容器 -->
	<bean name="userDao" class="dao_jdbcTemplate.UserDaoImpl" >
		<!-- 会自动创建模板对象，因此不需要手动创建模板 -->
		<!-- <property name="jdbcTemplate" ref="myJdbcTemplate" /> -->
		<!-- 直接注入数据源，系统会自动创建JDBC模板对象 -->
		<!-- 第2步是可以省略的 -->
		<property name="dataSource" ref="myC3P0DataSource" ></property>
	</bean>
	<!-- 4.将UserService放入Spring容器 -->
	<bean name="service" class="dao_jdbcTemplate.UserServiceImpl">
		<property name="dao" ref="userDao"></property>
	</bean>

</beans>